{
    "i18n": true,
    "type": "tabs",
    "items": {
        "tabGas": {
            "type": "panel",
            "label": "Gas",
            "items": {
                "gasAktiv": {
                    "type": "checkbox",
                    "label": "Gas-Überwachung aktivieren",
                    "sm": 12
                },
                "gasSensorDP": {
                    "type": "selectID",
                    "label": "Datenpunkt Gaszähler (m³)",
                    "hidden": "!data.gasAktiv",
                    "sm": 12
                },
                "gasZaehlerstandEcht": {
                    "type": "number",
                    "label": "Aktueller Zählerstand am Gerät (m³)",
                    "hidden": "!data.gasAktiv",
                    "sm": 6
                },
                "gasBrennwert": {
                    "type": "number",
                    "label": "Brennwert (kWh/m³)",
                    "hidden": "!data.gasAktiv",
                    "sm": 3,
                    "min": 8,
                    "max": 14,
                    "step": 0.1
                },
                "gasZahl": {
                    "type": "number",
                    "label": "Z-Zahl (Zustandszahl)",
                    "hidden": "!data.gasAktiv",
                    "sm": 3,
                    "min": 0.8,
                    "max": 1.0,
                    "step": 0.01
                },
                "_gasPreisHeader": {
                    "type": "header",
                    "text": "Preisinformationen",
                    "size": 5,
                    "hidden": "!data.gasAktiv"
                },
                "gasPreise": {
                    "type": "table",
                    "hidden": "!data.gasAktiv",
                    "label": "Gaspreise",
                    "sm": 12,
                    "items": [
                        {
                            "type": "date",
                            "attr": "validFrom",
                            "title": "Gültig ab",
                            "width": "30%"
                        },
                        {
                            "type": "number",
                            "attr": "price",
                            "title": "Preis (€/kWh)",
                            "width": "35%",
                            "min": 0,
                            "step": 0.001
                        },
                        {
                            "type": "number",
                            "attr": "basicCharge",
                            "title": "Grundgebühr (€/Monat)",
                            "width": "35%",
                            "min": 0,
                            "step": 0.01
                        }
                    ]
                }
            }
        },
